    "def format_time(secs):\n",
    "    mili = math.floor(int(secs * 1000%1000)/100)#it display number of miliseconds from the seconds\n",
    "    seconds = int(round(secs % 60, 1))\n",
    "    minutes = int(secs / 60)\n",
    "\n",
    "    return f\"{minutes:02d}:{seconds:02d}.{mili}\""

    "WIN = pygame.display.set_mode((width,height))\n",
    "pygame.display.set_caption(\"aim trainer game\")\n",
    "target_incr = 400\n",
    "target_event = pygame.USEREVENT\n",
    "\n",
    "target_padding = 30\n",
    "lives = 10\n",
    "top_bar_height = 50\n",
    "font = pygame.font.SysFont(\"timenewroman\",20)"
